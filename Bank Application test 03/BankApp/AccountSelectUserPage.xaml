<Page x:Class="BankApp.AccountSelectUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BankApp"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="850"
      Title="AccountSelectUserPage">

    <Grid Background="#FFF3EBEB">
        <Label Content="Enter User ID" HorizontalAlignment="Left" Margin="46,63,0,0" VerticalAlignment="Top" Width="140" FontWeight="Bold" FontSize="18"/>
        <TextBox  x:Name="userID" HorizontalAlignment="Left" Height="27" Margin="186,63,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="246" FontWeight="Bold" FontSize="18"/>
        <Button Content="Search" HorizontalAlignment="Left" Margin="458,63,0,0" VerticalAlignment="Top" Width="144" FontWeight="Bold" FontSize="18" Height="27" Background="#FF4FA250" Click="GetAccountsByID"/>
        <ListView Margin="146,136,0,0" Name="ListView1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="498" Height="413" FontWeight="Bold" FontSize="16" Background="#FFC5C53B">
            <ListViewItem Content="Account ID"></ListViewItem>

        </ListView>
    </Grid>
</Page>
