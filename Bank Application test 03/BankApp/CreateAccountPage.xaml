<Page x:Class="BankApp.CreateAccountPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BankApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateAccountPage">

    <Grid Background="#FFEAE2E2">
        <Label Content="Create New Account" HorizontalAlignment="Left" Margin="209,66,0,0" VerticalAlignment="Top" Width="306" FontWeight="Bold" FontSize="20"/>
        <Label Content="Enter user ID" HorizontalAlignment="Left" Margin="62,134,0,0" VerticalAlignment="Top" Height="39" Width="125" FontWeight="Bold" FontSize="18"/>
        <TextBox x:Name="idUser" HorizontalAlignment="Left" Height="39" Margin="209,134,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="251" FontWeight="Bold" FontSize="16"/>
        <Button Content="Create" HorizontalAlignment="Left" Margin="549,134,0,0" VerticalAlignment="Top" Width="118" Height="39" FontWeight="Bold" FontSize="16" Background="#FF23B41F" Click="CreateNewAccount_Click"/>
        <TextBox x:Name="newAccount" HorizontalAlignment="Left" Height="42" Margin="209,236,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="232" FontWeight="Bold" FontSize="16"/>

    </Grid>
</Page>
